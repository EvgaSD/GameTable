@model test_task_2002.Models.User
@{
    ViewBag.Title = "AddUser";
}
<form asp-action="AddUser" asp-controller="home">
    <div class="form-group">
        <label asp-for="Name">UserName</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Age" class="control-label">Age</label>
        <input type="number" asp-for="Age" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Status" class="control-label">Status</label>
        <input type="text" asp-for="Status" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="NickName" class="control-label">NickName</label>
        <input type="text" asp-for="NickName" class="form-control" />
    </div>

    <div class="form-group">
        <input type="submit" value="Submit" class="btn btn-outline-success" />
    </div>
</form>
